<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7F7"
    android:layout_marginTop="20dp"
    tools:context=".AvailableHouses">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:textSize="15sp"
        android:text="Available Homes"
        android:textColor="@android:color/background_dark"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/top_places_recycler"
        android:layout_width="390dp"
        android:layout_height="500dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/feedbackicon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:onClick="openfeedbackPage"
            android:src="@drawable/feedback"
            tools:ignore="OnClick" />

        <ImageView
            android:id="@+id/homeicon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:onClick="openhomePage"
            app:srcCompat="@drawable/homeicon"
            tools:ignore="OnClick" />


        <ImageView
            android:id="@+id/profilepageicon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:onClick="openprofilePage"
            app:srcCompat="@drawable/toprofileicon"
            tools:ignore="OnClick" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>