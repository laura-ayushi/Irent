<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeedbackForm">

    <androidx.cardview.widget.CardView
        android:layout_width="374dp"
        android:layout_height="576dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        tools:ignore="MissingClass">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="420dp"
                android:layout_marginRight="10dp"
                android:background="@color/blue"
                android:drawableRight="@drawable/ic_baseline_chat_24"
                android:padding="15dp"
                android:text="SUBMIT"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_address"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:hint="Enter feedback"
                android:padding="10dp" />

            <EditText
                android:id="@+id/email_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/yournames"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:hint="Email address"
                android:padding="10dp" />

            <TextView
                android:id="@+id/feedbacktitle"
                android:layout_width="302dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="20sp"
                android:text="Feedback Form"
                android:textColor="#23203f"
                android:textSize="40sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/yournames"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/feedbacktitle"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:hint="Your names"
                android:padding="10dp" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>